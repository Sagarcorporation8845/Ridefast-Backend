# RideFast Backend - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===========================================
# API Gateway Configuration
# ===========================================
PORT=80

# ===========================================
# Database Configuration (Shared)
# ===========================================
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=ridefast
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# ===========================================
# Service Ports
# ===========================================
USER_SERVICE_PORT=3001
DRIVER_SERVICE_PORT=3002
SUPPORT_SERVICE_PORT=3003
# Note: Admin service uses PORT=3004 in its own .env
SIGNALING_SERVICE_PORT=3005

# ===========================================
# CORS Configuration
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ===========================================
# Environment
# ===========================================
NODE_ENV=development

# ===========================================
# Service-Specific Configuration
# ===========================================

# File Upload Configuration (Driver Service)
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# WebSocket Configuration (Signaling Service)
WS_CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Email Configuration (Future use)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password

# ===========================================
# External Services (Future use)
# ===========================================

# Payment Gateway
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# SMS Service
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=RIDEFAST

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key

# ===========================================
# Monitoring & Logging
# ===========================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true